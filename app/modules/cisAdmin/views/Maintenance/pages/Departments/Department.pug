extends ../../../../../../templates/admin

block append content
    #content.column
        .ui.grid
            .row
                label.ui.indigo.massive.label
                    span
                        i.wrench.icon
                        |&nbsp; Departments
                        small#small &nbsp;&nbsp;&nbsp; Maintenance
            .ui.divider
            .row
                a.ui.green.button(href="/admin/maintenance/Departments/new") 
                    span
                        i.add.icon
                        |Add Department    
                table.ui.single.line.center.aligned.striped.selectable.padded.celled.fixed.table
                    thead
                        tr
                            th Name 
                            th Actions
                    tbody
                        each department in departments
                            tr
                                td #{department.strDepartmentName}
                                td
                                    a.ui.blue.compact.button(href=`/admin/maintenance/Departments/${department.intDepartmentID}`) Edit
                                    a.ui.red.compact.button(href=`/admin/maintenance/Departments/${department.intDepartmentID}/delete`) Delete
            script.
                {
                    var eo = document.getElementById("department");
                    eo.classList.add("active");
                }
